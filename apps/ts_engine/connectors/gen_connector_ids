#!/usr/bin/env python

import sys
import os

print """/* THIS FILE IS GENERATED BY BUILD TOOLS! DO NOT TOUCH! DO NOT COMMIT! */

#ifndef __CONNECTOR_IDS_H___
#define __CONNECTOR_IDS_H___

enum {"""

first_assigned = False
for arg in sys.argv[1:]:
    file_name = os.path.basename(arg)
    only_name, extension = os.path.splitext(file_name)
    sys.stdout.write("  " + only_name.upper() + "_ID")
    if (not first_assigned):
        sys.stdout.write(" = 0")
        first_assigned = True
    print ","

print """  NUMBER_OF_CONNECTORS
};

#endif /* __CONNECTOR_IDS_H___ */
"""
